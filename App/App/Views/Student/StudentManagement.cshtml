@model List<StudentViewModel>

@{
    ViewData["Title"] = "학생 관리";
}

<h2>학생 목록</h2>
<table class="table">
    <thead>
        <tr>
            <th class="align-middle text-center">이름</th>
            <th class="align-middle text-center">핸드폰 번호</th>
            <th class="align-middle text-center">수강 악기</th>
            <th class="align-middle text-center">담당 선생님</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (StudentViewModel studentViewModel in Model)
        {
            <tr>
                <td class="align-middle text-center">@studentViewModel.Student.Name</td>
                <td class="align-middle text-center">@studentViewModel.Student.PhoneNumber</td>
                <td class="align-middle text-center">@studentViewModel.Student.Ins</td>
                <td class="align-middle text-center">@studentViewModel.TeacherName</td>
                <td class="align-middle text-center">
                    <a class="btn btn-info" asp-area="" asp-controller="Student" asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>