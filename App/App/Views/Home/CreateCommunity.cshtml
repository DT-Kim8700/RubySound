@model CommunityCreateViewModel

@{
    ViewData["Title"] = "글 작성";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr />
        <form method="post" class="form-horizontal">
            <div class="form-group row align-items-center">
                <input class="form-control" placeholder="제목을 입력해주세요" asp-for="Community.Title"/>
                <span asp-validation-for="Community.Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <textarea class="form-control h-100" rows="20" asp-for="Community.Description"></textarea>
                <span asp-validation-for="Community.Description" class="text-danger"></span>
            </div>
            <input type="hidden" value="@User.Identity.Name" asp-for="AccountUser.Email"/>        <!-- 로그인 한 사용자의 Emali -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-info">글 등록</button>
            </div>
        </form>
    </div>
</div>