@model AccountUserViewModel

@{
    ViewData["Title"] = "유저 정보 수정";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <hr />
            <form method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" value="@Model.Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BeforePassword">이전 비밀번호</label>
                    <input asp-for="BeforePassword" class="form-control" />
                    <span asp-validation-for="BeforePassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">새 비밀번호</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">비밀번호 확인</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">주소</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">핸드폰 번호</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-info">변경</button>
                </div>
            </form>
        </div>
    </div>
}